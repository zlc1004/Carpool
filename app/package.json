  "scripts": {
    "start": "cd .. && ./runner.sh",
    "dev": "meteor --no-release-check --settings ../config/settings.development.json --port 3001",
    "lint": "eslint --quiet --ext .jsx,.js,.mjs .",
    "lint:compact": "eslint --quiet --ext .jsx,.js,.mjs --format compact .",
    "lint:fix": "eslint --quiet --ext .jsx,.js,.mjs --fix .",
    "build": "meteor build ../build --architecture os.linux.x86_64 --server-only",
    "build:server": "cd .. && ./build-app.sh server",
    "build:ios": "cd .. && ./build-app.sh ios",
    "build:android": "cd .. && ./build-app.sh android",
    "build:android:dev": "cd .. && ./build-app.sh android --server-url https://dev.carp.school",
    "build:all": "cd .. && ./build-app.sh all",
    "build:ios:dev": "cd .. && ./build-app.sh ios --server-url https://dev.carp.school",
    "build:prod": "cd .. && ./build-app.sh all --server-url https://carp.school",
    "build:server:prod": "cd .. && ./build-prod.sh",
    "build:codepush:ios": "cd .. && ./build-app.sh codepush-ios",
    "build:codepush:android": "cd .. && ./build-app.sh codepush-android",
    "build:codepush:status": "cd .. && ./build-app.sh codepush-status",
    "clean": "cd .. && ./clean.sh",
    "clean:all": "source ../tools/meteor-utils.sh && meteor_clean_ios"
  }
